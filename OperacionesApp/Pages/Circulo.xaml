<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.Pages.Circulo"
             Title="Circulo">
    <VerticalStackLayout Padding="50" Spacing="5">
        <Label Text="Ingrese el radio del círculo:" />
        <Entry x:Name="txtRadio" Keyboard="Numeric" />
        <Label Text="Área del círculo:" />
        <Entry x:Name="txtArea" IsReadOnly="True" />
        <Button x:Name="btnCalcular" Text="Calcular" Clicked="btnCalcular_Clicked" BackgroundColor="Green" />
        <Button x:Name="btnLimpiar" Text="Limpiar" Clicked="btnLimpiar_Clicked" />
    </VerticalStackLayout>
</ContentPage>