<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.Pages.Rectangulo"
             Title="Rectangulo">
    <VerticalStackLayout Padding="50" Spacing="5">
        <Label Text="Ingrese la base del rectángulo:" />
        <Entry x:Name="txtBase" Keyboard="Numeric" />
        <Label Text="Ingrese la altura del rectángulo:" />
        <Entry x:Name="txtAltura" Keyboard="Numeric" />
        <Label Text="Área del rectángulo:" />
        <Entry x:Name="txtArea" IsReadOnly="True" />
        <Button x:Name="btnCalcular" Text="Calcular" Clicked="btnCalcular_Clicked" BackgroundColor="Green" />
        <Button x:Name="btnLimpiar" Text="Limpiar" Clicked="btnLimpiar_Clicked" />
    </VerticalStackLayout>
</ContentPage>